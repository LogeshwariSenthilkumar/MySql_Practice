select * from student;
select * from department;

select student_name,dept_name,location from student inner join department on student.dept_id=department.dept_id;
select s.student_name,s.marks,d.dept_name from student s inner join department d on s.dept_id=d.dept_id where s.marks>80;
select s.student_name,d.dept_name from student s inner join department d on s.dept_id =d.dept_id where dept_name='It';
select s.student_name,s.branch,d.dept_name,d.location from student s inner join department d on s.dept_id=d.dept_id where s.marks>85;

select s.student_name,d.dept_name from student s left join department d on s.dept_id=d.dept_id;
select s.student_name,d.dept_name from department d left join student s on d.dept_id=s.dept_id;
select s.student_name,d.dept_name from student s left join department d on s.dept_id=d.dept_id where d.dept_name is null;

select d.dept_name,s.student_name from student s right join department d on s.dept_id=d.dept_id;
select d.dept_name,s.student_name from student s right join department d on s.dept_id =d.dept_id where s.marks<90;

select s.student_name,d.dept_name from student s left join department d on s.dept_id=d.dept_id union
select s.student_name,d.dept_name from student s right join department d on s.dept_id=d.dept_id;

select s.student_name,d.dept_name from student s cross join department d;
select count(student_name) from student cross join department d;





