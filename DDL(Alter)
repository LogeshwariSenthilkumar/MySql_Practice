//1.add column:
//1.1 last:
alter table Employee add address varchar(20);


//1.2 first:
alter table Employee add location varchar(30) first;


//1.3 inbetween:
alter table Employee add age int after name;

//2.modify:
//2.1 datatype change:
alter table Employee modify location int;


//2.2 Shift existing column:
alter table Employee modify address varchar(20) after name;

//3.rename:
//3.1 table rename:
alter table Employee rename Workers;

//3.2 column rename:
alter table Employee rename column location to loc;

//4.Drop:
//4.1 drop column single:
alter table Employee drop loc;


//4.2 drop multiple column:
alter table Employee drop address,drop age;

