//1.Foreign key:
//1.1 while table creation:

create table Department(
dept_id int primary key,
dept_name varchar(30)
);

create table Employee(
e_id int primary key,
e_name varchar(30),
dept_id int,
foreign key(dept_id) references Department(dept_id)
);

//1.2 After table creation:

alter table employee add constraint frg_key foreign key(dept_id) references Department(dept_id);

//1.3 delete:

alter table employee drop constraint frg_key;
